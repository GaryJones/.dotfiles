# Reset the PATH to sane defaults
export PATH="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"

# Let's not forger local brew users
if [ -e "$HOME/.brew" ]; then
  export PATH="$HOME/.brew/sbin:$HOME/.brew/bin:$PATH"
fi

# Neither shall we forget .local
if [ -e "$HOME/.local" ]; then
  export PATH="$HOME/.local/sbin:$HOME/.local/bin:$PATH"
fi

# Launch tmux
if command -v tmux>/dev/null; then
  [[ ! $TERM =~ screen ]] && [ -z $TMUX ] && exec tmux
fi

# Load rbenv
if command -v rbenv > /dev/null 2>&1; then
  eval "$(rbenv init - zsh)"
fi

# Load antigen
source "$HOME/.antigen/antigen.zsh"
antigen use oh-my-zsh
antigen bundle git
antigen theme gallifrey
antigen apply

# A serve function, launching a basic ruby webserver
function serve {
  port=${1:-8000}
  ruby -r webrick -e "s = WEBrick::HTTPServer.new(:Port => $port, :DocumentRoot => Dir.pwd); trap('INT') { s.shutdown }; s.start"
}

# Load some extra config
if [ -e "$HOME/.zextra" ]; then
  source "$HOME/.zextra"
fi
